<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_4sdp"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/received_message_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_received_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:padding="@dimen/_12sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/received_message_user"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            android:padding="@dimen/_2sdp"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           />

        <TextView
            android:layout_width="0dp"
            android:padding="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:id="@+id/received_message_text"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintTop_toTopOf="@id/received_message_user"
            app:layout_constraintStart_toStartOf="parent"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/received_message_date"
        android:layout_marginTop="@dimen/_4sdp"
        android:textColor="@color/design_default_color_secondary"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/received_message_layout" />




</androidx.constraintlayout.widget.ConstraintLayout>

